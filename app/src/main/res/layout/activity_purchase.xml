<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tongchaitonsau.smartsmallshowroom.PurchaseActivity">



    <!--<Button-->
        <!--style="@style/Button_style"-->
        <!--android:id="@+id/purchase_i"-->
        <!--android:text="Purchase"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--app:layout_constraintVertical_bias="0.9" />-->
    <ImageView
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:id="@+id/music_box_picture"
        android:src="@drawable/ic_library_music_black_24dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/name_pc"
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:textSize="60dp"
        android:gravity="center"/>
    <SeekBar
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:max="100"
        android:progress="70"
       android:layout_gravity="center"
        android:layout_marginTop="50dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp">
        <Button
            android:id="@+id/play_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Play"/>
        <Button
            android:id="@+id/stop_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Stop"/>

    </LinearLayout>


</LinearLayout>
